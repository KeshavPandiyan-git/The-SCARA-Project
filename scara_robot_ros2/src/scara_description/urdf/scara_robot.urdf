<?xml version="1.0"?>
<!-- Simplified URDF for SCARA Robot (Non-Xacro version) -->
<robot name="scara_robot">

  <!-- Robot Parameters -->
  <!-- Link 1 length: 228mm = 0.228m -->
  <!-- Link 2 length: 136.5mm = 0.1365m -->

  <!-- Base Link (root link - no inertia) -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="base_color">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </collision>
    <!-- Removed inertial - KDL doesn't support inertia on root link -->
  </link>

  <!-- Joint 1 (Base Rotation): -90 to 266 degrees -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="4.6435" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 1: 228mm -->
  <link name="link1">
    <visual>
      <origin xyz="0.114 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.228"/>
      </geometry>
      <material name="link1_color">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.114 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.228"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.114 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint 2 (Shoulder/Elbow): -150 to 150 degrees -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.228 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.6180" upper="2.6180" effort="100.0" velocity="2.0"/>
  </joint>

  <!-- Link 2: 136.5mm -->
  <link name="link2">
    <visual>
      <origin xyz="0.06825 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.1365"/>
      </geometry>
      <material name="link2_color">
        <color rgba="0.8 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.06825 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.1365"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0.06825 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint 3 (Wrist Rotation - Phi): -162 to 162 degrees -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="wrist"/>
    <origin xyz="0.1365 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.8274" upper="2.8274" effort="50.0" velocity="2.0"/>
  </joint>

  <!-- Wrist Link -->
  <link name="wrist">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="wrist_color">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 4 (Z-axis - Prismatic): 0 to 150mm -->
  <joint name="joint_z" type="prismatic">
    <parent link="wrist"/>
    <child link="end_effector"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="0.15" effort="50.0" velocity="0.1"/>
  </joint>

  <!-- End Effector -->
  <link name="end_effector">
    <visual>
      <origin xyz="0 0 -0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.06"/>
      </geometry>
      <material name="end_effector_color">
        <color rgba="0.8 0.8 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 -0.03" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

</robot>

